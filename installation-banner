#!/bin/bash

# Check if running as root
if [[ $EUID -ne 0 ]]; then
  echo "Please run this script as root or with sudo."
  exit 1
fi

# Install nano if not installed
if ! command -v nano &> /dev/null; then
  echo "nano not found. Installing nano..."
  if command -v dnf &> /dev/null; then
    dnf install -y nano
  elif command -v yum &> /dev/null; then
    yum install -y nano
  else
    echo "Package manager not found. Please install nano manually."
    exit 1
  fi
else
  echo "nano is already installed."
fi

# Create the banner script
cat <<'EOF' > /etc/profile.d/webdeployers-banner.sh
#!/bin/bash
cat <<'BANNEREOF'

 __       __            __        _______                       __                                                                         
|  \  _  |  \          |  \      |       \                     |  \                                                                        
| $$ / \ | $$  ______  | $$____  | $$$$$$$\  ______    ______  | $$  ______   __    __   ______    ______    _______                       
| $$/  $\| $$ /      \ | $$    \ | $$  | $$ /      \  /      \ | $$ /      \ |  \  |  \ /      \  /      \  /       \                      
| $$  $$$\ $$|  $$$$$$\| $$$$$$$\| $$  | $$|  $$$$$$\|  $$$$$$\| $$|  $$$$$$\| $$  | $$|  $$$$$$\|  $$$$$$\|  $$$$$$$                      
| $$ $$\$$\$$| $$    $$| $$  | $$| $$  | $$| $$    $$| $$  | $$| $$| $$  | $$| $$  | $$| $$    $$| $$   \$$ \$$    \                       
| $$$$  \$$$$| $$$$$$$$| $$__/ $$| $$__/ $$| $$$$$$$$| $$__/ $$| $$| $$__/ $$| $$__/ $$| $$$$$$$$| $$       _\$$$$$$\                      
| $$$    \$$$ \$$     \| $$    $$| $$    $$ \$$     \| $$    $$| $$ \$$    $$ \$$    $$ \$$     \| $$      |       $$                      
 \$$      \$$  \$$$$$$$ \$$$$$$$  \$$$$$$$   \$$$$$$$| $$$$$$$  \$$  \$$$$$$  _\$$$$$$$  \$$$$$$$ \$$       \$$$$$$$                       
                                                     | $$                    |  \__| $$                                                    
                                                     | $$                     \$$    $$                                                    
                                                      \$$                      \$$$$$$                                                     
 _______                        __                __        __                   ______                                                    
|       \                      |  \              |  \      |  \                 /      \                                                   
| $$$$$$$\  ______    ______  _| $$_     ______  | $$____  | $$  ______        |  $$$$$$\  ______    ______  __     __   ______    ______  
| $$__/ $$ /      \  /      \|   $$ \   |      \ | $$    \ | $$ /      \       | $$___\$$ /      \  /      \|  \   /  \ /      \  /      \ 
| $$    $$|  $$$$$$\|  $$$$$$\\$$$$$$    \$$$$$$\| $$$$$$$\| $$|  $$$$$$\       \$$    \ |  $$$$$$\|  $$$$$$\\$$\ /  $$|  $$$$$$\|  $$$$$$\
| $$$$$$$ | $$  | $$| $$   \$$ | $$ __  /      $$| $$  | $$| $$| $$    $$       _\$$$$$$\| $$    $$| $$   \$$ \$$\  $$ | $$    $$| $$   \$$
| $$      | $$__/ $$| $$       | $$|  \|  $$$$$$$| $$__/ $$| $$| $$$$$$$$      |  \__| $$| $$$$$$$$| $$        \$$ $$  | $$$$$$$$| $$      
| $$       \$$    $$| $$        \$$  $$ \$$    $$| $$    $$| $$ \$$     \       \$$    $$ \$$     \| $$         \$$$    \$$     \| $$      
 \$$        \$$$$$$  \$$         \$$$$   \$$$$$$$ \$$$$$$$  \$$  \$$$$$$$        \$$$$$$   \$$$$$$$ \$$          \$      \$$$$$$$ \$$      
                                                                                                                                           
                                                                                                                                           

BANNEREOF
EOF

# Make banner script executable
chmod +x /etc/profile.d/webdeployers-banner.sh

echo "Installation complete. The banner will show on next login."
